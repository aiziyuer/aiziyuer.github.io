{
    "root": {
        "src": "./src",
        "dest": "./public"
    },
    
    "images": {
        "src": "images",
        "dest": "images",
        "extensions": ["jpg", "png", "svg", "gif"]
    },

    "fonts": {
        "src": "fonts",
        "dest": "fonts",
        "extensions": ["woff2", "woff", "eot", "ttf", "svg"]
    },

    "iconFont": {
        "src": "icons",
        "dest": "fonts",
        "sassDest": "generated",
        "extensions": ["woff2", "woff", "eot", "ttf", "svg"]
    },

    "svgSprite": {
        "src": "icons",
        "dest": "images",
        "extensions": ["svg"]
    },

    "production": {
        "rev": true
    }
}
